{
	"compilerOptions": {
		"target": "es2015", // es3, es5, es2015, es2016, es2017, esnext
		"module": "commonjs",
		"moduleResolution": "node",
		"traceResolution": false,
		"lib": [
			"es7",
			"es6",
			"es5",
			"dom",
			"es2015.promise",
			"scripthost",
			"dom.iterable",
			"esnext.asynciterable"
		],
		"jsx": "react",
		"jsxFactory": "createElement",
		"allowJs": false,
		"preserveConstEnums": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"incremental": true,
		"outDir": "./dist"
	},
	"include": [
		"./src",
	]
}